<!DOCTYPE html>

<html>
    <head>
        <meta charset = "utf-8">
        <title>@Page.Title</title>
        <link type="text/css" rel="stylesheet" href="../../Content/bootstrap/css/bootstrap.css">
    </head>
    <body>
        <div class="container">
            
            @{
                Html.RenderPartial("_Header");
            }

            <hr>

            @{
                Html.RenderPartial("_NavBar");   
            }
            
            <div id="content">
                @RenderBody()
            </div>
            
            @{
                Html.RenderPartial("_Contacts");
            }

		    <hr>

            @{
                Html.RenderPartial("_Footer");
            }
            
            <hr/>
            
            @{
                Html.RenderPartial("_ScriptReferences");
            }

        </div>
    </body>
</html>
